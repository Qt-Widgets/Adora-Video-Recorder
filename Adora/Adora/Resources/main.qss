
/* /////////////////////////////////               */
QLineEdit {

    background: #FFFFFF;
    border: 1px solid #DEDEDE;
    box-sizing: border-box;
	box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
	border-radius: 5px;

}

QLineEdit:disabled {
    background:#DEDEDE;
    border: 1px solid #DEDEDE;
    box-sizing: border-box;
	box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
	border-radius: 5px;
}

/*      ///////////////////////////////////////           */ 
QCheckBox::indicator {
    height: 24px;
	width: 24px;
}

QCheckBox::indicator::unchecked {

    image: url(":/Main/checkBox_unchecked");
}

QCheckBox::indicator::checked {
    image: url(":/Main/checkBox_checked");
}


/*    ///////////////////////////////////////////               */ 
QRadioButton::indicator {
    height: 24px;
	width: 24px;
}

QRadioButton::indicator::unchecked {

    image: url(":/Main/radioButton_unchecked");
}

QRadioButton::indicator::checked {
    image: url(":/Main/radioButton_checked");
}



